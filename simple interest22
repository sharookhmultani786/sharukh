#include<stdio.h>
int main()
{
	int principal,rate ,time,interest,age;
	printf("enter the principal amount:");
	scanf("%d",&principal);
	printf("enter the age:");
	scanf("%d",&age);
	if(age>=60)
	{
		rate=12;
		printf("you are senior citizen",rate);
		
		
	}
	else
	{
		rate=10;
		printf("you are not senior citizen",rate);
	}
	printf("enter the time:");
	scanf("%d",&time);
	interest=principal*time*rate/100;
	printf("the simple interest is %d",interest);
	
	
}
