#include<stdio.h>
int main()
{
	int i,j,row,space;
	printf("enter the number:");
	scanf("%d",&row);
	for(i=1;i<=row;i++)
	{
		for(space=1;space<=row-i;space++)
		{
			printf(" ");
		}
		for(j=1;j<=2*i-1;j++)
		{
			printf("%d",i);
		}
		printf("\n");
	}
	for(i=row;i>=1;i--)
	{
		for(space=1;space<=row-i;space++)
		{
			printf(" ");
		}
		for(j=1;j<=2*i-1;j++)
		{
			printf("%d",i);
		}
		printf("\n");
	}
}
